#!/usr/bin/env node

process.title = 'bower';

var path = require('path');
var nopt = require('nopt');
var pkg = require(path.join(__dirname, '..', 'package.json'));

// --------

var options = nopt({
    version: Boolean
}, {
    'v': ['--version']
}, process.argv);

// Handle print of version
if (options.version) {
    process.stdout.write(pkg.version + '\n');
    process.exit();
}
